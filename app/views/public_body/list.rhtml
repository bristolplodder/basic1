    </li></ul>

    <% first_row = true %>
    <%# for row in PublicBodyCategories::CATEGORIES_WITH_HEADINGS %>
        <%# if row.instance_of?(Array) %>
            <li>
            <%#= link_to_unless (@tag == row[0]), row[1], list_public_bodies_url(:tag => row[0]) %> 
            </li>
        <%# else %>
            <%# if not first_row %>
                </ul>
